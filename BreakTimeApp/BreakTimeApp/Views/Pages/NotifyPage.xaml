<Page
    x:Class="BreakTimeApp.Views.Pages.NotifyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BreakTimeApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="NotifyPage"
    d:DataContext="{d:DesignInstance local:NotifyPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <ui:ListView
                Name="listView"
                d:ItemsSource="{d:SampleData ItemCount=4}"
                ItemsSource="{Binding ViewModel.Items}"
                SelectedItem="{Binding ViewModel.SelectedItem}">
                <ui:ListView.ItemContainerStyle>
                    <Style TargetType="ui:ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ui:ListView.ItemContainerStyle>

                <ui:ListView.ItemTemplate>
                    <DataTemplate>

                        <ui:CardControl Margin="0,5,0,5" Icon="{ui:SymbolIcon ClockAlarm24}">
                            <ui:CardControl.Header>
                                <ui:TextBlock
                                    Grid.Row="0"
                                    FontTypography="Body"
                                    Text="{DynamicResource notify_page_item_title}" />
                            </ui:CardControl.Header>
                            <StackPanel
                                Grid.Column="1"
                                Height="40"
                                Margin="5"
                                Orientation="Horizontal">
                                <ProgressBar
                                    Width="200"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    Foreground="#0085FC"
                                    IsIndeterminate="False" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    d:Text="08:23:11"
                                    FontSize="16"
                                    Text="{Binding End, StringFormat=HH:mm:ss}" />
                                <ui:Button
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding ViewModel.EditItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}"
                                    Icon="{ui:SymbolIcon Edit24}" />
                                <ui:Button
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding ViewModel.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}"
                                    Icon="{ui:SymbolIcon Delete24}" />
                            </StackPanel>
                        </ui:CardControl>

                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>

            <ui:CardControl
                Grid.Row="1"
                Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding ViewModel.AddCommand}"
                Icon="{ui:SymbolIcon Add24}" />

        </Grid>
    </Grid>
</Page>
